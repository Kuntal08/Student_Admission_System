<%= form_with(model: @seeker, local: true) do |form| %>

<div class="form">
  <div class="sections">
    <strong>Student Information</strong>
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>
    <div class="field">
      <%= form.label :middle_name %>
      <%= form.text_field :middle_name %>
    </div>
    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :home_address %>
      <%= form.text_area :home_address %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="field">
      <%= form.label :phone %>
      <%= form.telephone_field :phone %>
    </div>

    <div class="field">
      <%= form.label :birth_date %>
      <%= form.date_field :birth_date %>
    </div>

    <div class="field">
      <%= form.label :gender %>
      <%= form.radio_button :gender, 'Male' %> Male
      <%= form.radio_button :gender, 'Female' %> Female
      <%= form.radio_button :gender, 'Other' %> Other
    </div>
  </div>

  <div class="sections">
    <strong>Student Information</strong>
    <div class="field">
      <%= form.label :father_name %>
      <%= form.text_field :father_name %>
    </div>
    <div class="field">
      <%= form.label :mother_name %>
      <%= form.text_field :mother_name %>
    </div>
    <div class="field">
      <%= form.label :mother_employment %>
      <%= form.text_field :mother_employment %>
    </div>

    <div class="field">
      <%= form.label :father_employment %>
      <%= form.text_field :father_employment %>
    </div>
  </div>

  <div class="sections">
    <strong>Selection Information</strong>
    <div class="field">
      <%= form.label :board %>
      <%= form.select(:board, @board_options) %>
    </div>
    <div class="field">
      <%= form.label :school %>
      <%= form.select(:school, @school_options) %>
    </div>
    <div class="field">
      <%= form.label :division %>
      <%= form.select(:division, @division_options) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>

<%= link_to "Back", seekers_path %>
