<%= form_with(model: [:admin, @division], local: true) do |form| %>

  <% if @division.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@division.errors.count, "error") %> Prohibited
        this division from being saved:
      </h2>
      <ul>
        <% @division.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :division %><br>
    <%= form.text_field :division %>
  </p>

  <p>
    <%= form.label :stage %><br>
    <%= form.text_field :stage %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
