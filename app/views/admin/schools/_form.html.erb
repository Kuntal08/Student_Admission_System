<%= form_with(model: [:admin, @school], local: true) do |form| %>

  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@school.errors.count, "error") %> Prohibited
        this school from being saved:
      </h2>
      <ul>
        <% @school.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :board_id %>
    <%= form.select(:board_id, @board_options) %>
  </div>

  <div class="field">
    <%= form.label :location_id %>
    <%= form.select(:location_id, @location_options) %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>
