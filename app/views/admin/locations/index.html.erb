<h1>Listing Locations</h1>

<table>
  <tr>
    <th>City Name</th>
    <th>Country Name</th>
    <th>Pin Code</th>
    <th class="new_link"><%= link_to 'New Location', new_admin_location_path %></th>
  </tr>

  <% @locations.each do |location| %>
    <tr>
      <td><%= location.city_name %></td>
      <td><%= location.country_name %></td>
      <td><%= location.pin %></td>
      <td class="link"><%= link_to 'Show', admin_location_path(location) %></td>
      <td class="link"><%= link_to 'Edit', edit_admin_location_path(location) %></td>
      <td class="link"><%= link_to 'Destroy', admin_location_path(location),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<div class="nav-back">
  <%= link_to 'Back', admin_root_path %>
</div>
