<h1>Listing Boards</h1>

<table>
  <tr>
    <th>Board</th>
    <th>Full Form</th>
    <th class="new_link"><%= link_to 'New Board', new_admin_board_path %></th>
  </tr>

  <% @boards.each do |board| %>
    <tr>
      <td><%= board.board %></td>
      <td><%= board.full_form %></td>
      <td class="link"><%= link_to 'Show', admin_board_path(board) %></td>
      <td class="link"><%= link_to 'Edit', edit_admin_board_path(board) %></td>
      <td class="link"><%= link_to 'Destroy', admin_board_path(board),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<div class="nav-back">
  <%= link_to 'Back', admin_root_path %>
</div>
